  name = Owen Garland
  editor = vim
  excludesfile = ~/.gitignore
[user]
  email = owen.garland@clock.co.uk
  name = Owen Garland
[push]
  default = simple
[alias]
  showtool = "!f() { git difftool $1^ $1; }; f"
  added = difftool --cached
[tag]
  sort = version:refname
[diff]
  tool = icdiff
[difftool]
  prompt = false
[difftool "icdiff"]
  cmd = /usr/bin/icdiff --line-numbers $LOCAL $REMOTE
[pager]
  difftool = true
